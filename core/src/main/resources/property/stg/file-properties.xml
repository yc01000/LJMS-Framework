<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	<comment>File Extension Properties for File Upload</comment>	

	<entry key="file.upload.ext.all">txt,rtf,doc,docx,hwp,pdf,ppt,pptx,xls,xlsx,gif,jpg,jpeg,bmp,psd,png,avi,mov,mpg,mpeg,asf,mp3,wav,mid,zip,rar,csv</entry>
	<entry key="file.upload.ext.doc">txt,rtf,doc,docx,hwp,pdf,ppt,pptx,xls,xlsx</entry>
	<entry key="file.upload.ext.image">gif,jpg,jpeg,bmp,psd,png</entry>
	<entry key="file.upload.ext.video">avi,mov,mpg,mpeg,asf</entry>
	<entry key="file.upload.ext.audio">mp3,wav,mid</entry>
	<entry key="file.upload.ext.zip">zip,rar</entry>

	<!-- 업로드 파일 저장소 타입 (local : 서버에 저장, cloud : 클라우드에 저장) -->
	<entry key="file.storage.type">cloud</entry>

	<!-- 에디터에 등록되는 이미지 업로드 경로 정보 : WebRoot 경로-->
	<!-- 1. for file.storage.type = local -->
	<!--
	<entry key="image.upload.uri">/images/upload</entry>
	<entry key="image.upload.path">/workspaces/.metadata/.plugins/org.eclipse.wst.server.core/tmp2/wtpwebapps/portal/images/upload</entry>
	-->
	<!-- 2. for file.storage.type = cloud -->
	<entry key="image.upload.uri">//s3.ap-northeast-2.amazonaws.com/pssstg-public/images/upload</entry>
	<entry key="image.upload.path">/images/upload</entry>
	<entry key="image.qrcode.uri">//s3.ap-northeast-2.amazonaws.com/pssstg-public/images/qrcode</entry>
	<entry key="image.qrcode.path">/images/qrcode</entry>
	
	<!-- public file uri-->
	<entry key="file.public.uri">//files.jinair.com</entry>
</properties>